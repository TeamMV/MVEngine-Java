<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="gui">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="textLine" type="element"/>
                <xs:element name="button" type="element"/>
                <xs:element name="checkbox" type="element"/>
                <xs:element name="imageButton" type="element"/>
                <xs:element name="inputBox" type="element"/>
                <xs:element name="numericInputBox" type="element"/>
                <xs:element name="passwordInputBox" type="element"/>
                <xs:element name="progressBar" type="element"/>
                <xs:element name="separator" type="element"/>
                <xs:element name="space" type="element"/>

                <xs:element name="decision" type="container">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="choice" type="element"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="verticalLayout" type="container"/>
                <xs:element name="horizontalLayout" type="container"/>
            </xs:sequence>
            <xs:attribute name="name" use="required"/>
        </xs:complexType>
    </xs:element>
    
    <xs:complexType name="element">
        <xs:sequence>
            <xs:element name="tag" type="xs:string"/>
            <xs:element name="content" type="xs:string" maxOccurs="1"/>
            <xs:element name="color" type="xs:hexBinary" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="x" use="optional" type="xs:integer"/>
        <xs:attribute name="y" use="optional" type="xs:integer"/>
        <xs:attribute name="width" use="optional" type="xs:integer"/>
        <xs:attribute name="height" use="optional" type="xs:integer"/>
        <xs:attribute name="id" use="optional" type="xs:ID"/>
    </xs:complexType>
    <xs:complexType name="container">
        <xs:sequence>
            <xs:element name="textLine" type="element"/>
            <xs:element name="button" type="element"/>
            <xs:element name="checkbox" type="element"/>
            <xs:element name="imageButton" type="element"/>
            <xs:element name="inputBox" type="element"/>
            <xs:element name="numericInputBox" type="element"/>
            <xs:element name="passwordInputBox" type="element"/>
            <xs:element name="progressBar" type="element"/>
            <xs:element name="separator" type="element"/>
            <xs:element name="space" type="element"/>
            <xs:element name="decision" type="container">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="choice" type="element"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="verticalLayout" type="container"/>
            <xs:element name="horizontalLayout" type="container"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>