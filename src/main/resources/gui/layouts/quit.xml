<?xml version="1.0" encoding="UTF-8" ?>
<gui name="quit">
    <script src="dev.mv.engine.test.Manager"/>

    <variables>
        <var name="height">5%</var>
    </variables>

    <elements>
        <aligner x="0" y="0" width="100%" height="100%">
            <verticalLayout spacing="10" align="CENTER" showFrame="true" padding="[5]">
                <textLine height="$VAR(height)">Are you sure you want to quit?</textLine>
                <horizontalLayout spacing="5" showFrame="false" align="CENTER">
                    <button height="$VAR(height)" width="5%">yes</button>
                    <button height="$VAR(height)" width="5%">no</button>
                </horizontalLayout>
            </verticalLayout>
        </aligner>
    </elements>
</gui>